@model IEnumerable<Garduino.Models.Measure>

@{
    ViewData["Title"] = "Device Entries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ChartJSCore.Models.Chart chart = (ChartJSCore.Models.Chart)ViewData["chart"];
    ChartJSCore.Models.Chart chart2 = (ChartJSCore.Models.Chart)ViewData["chart2"];
}
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.js"></script>
    <script>
        @Html.Raw(chart.CreateChartCode("lineChart"));
        @Html.Raw(chart2.CreateChartCode("lineChart2"))
    </script>
}

<div class="jumbotron">
    <div class="page-header">
        <h2>
            @ViewData["Title"] <small>&nbsp;All your entries, in one place!<a class="btn btn-primary pull-right" asp-controller="Entry" asp-action="Create" asp-route-deviceId="@ViewData["deviceId"]">Post entry</a></small>
        </h2>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6">
            <canvas id="lineChart"></canvas>
        </div>
        <div class="col-md-6">
            <canvas id="lineChart2"></canvas>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SoilMoisture)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SoilDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AirHumidity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AirTemperature)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LightState)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoilMoisture)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoilDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AirHumidity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AirTemperature)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LightState)
                            </td>
                            <td>
                                @Html.Partial("TableLinks", item)
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>

