@model IEnumerable<Garduino.Models.Code>

@{
    ViewData["Title"] = "Active codes";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" asp-route-deviceId="@ViewData["deviceId"]">Create New</a> | 
    <a asp-action="All" asp-route-deviceId="@ViewData["deviceId"]">See all</a>
</p>
<form asp-controller="Code" asp-action="Index" asp-route-deviceId="@ViewData["deviceId"]" method="get">
    @await Html.PartialAsync("Search")
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Action)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateArrived)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Device.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Action)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateArrived)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Device.Name)
            </td>
            <td>
                @Html.Partial("TableLinks", item)
            </td>
        </tr>
}
    </tbody>
</table>
